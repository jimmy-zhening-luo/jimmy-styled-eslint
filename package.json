{
  "name": "@jimbojet/lint",
  "version": "1.0.0",
  "description": "Jimmy's highly-opinionated config plugin for eslint + typescript-eslint + eslint-stylistic",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-zhening-luo/lint.git"
  },
  "author": "Jimmy Zhening Luo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jimmy-zhening-luo/lint/issues"
  },
  "homepage": "https://github.com/jimmy-zhening-luo/lint#readme",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.4"
  },
  "scripts": {
    "clean": "npm run clean:dist && npm run clean:lint-cache",
    "clean:dist": "shx rm -rf dist",
    "clean:lint-cache": "shx rm -rf .eslintcache",
    "lint": "eslint --cache --cache-strategy content -c eslint.config.js **",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "npm run lint:fix",
    "build": "tsc"
  },
  "devDependencies": {
    "@eslint/js": "^8.55.0",
    "@stylistic/eslint-plugin": "^1.5.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "shx": "^0.3.4",
    "typescript": "^5.3.3"
  }
}
